<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
	<div class="info">
		<h1> Common </h1>
		<p>
			<strong>access token </strong> : <%= user.access_token %>
			<strong>source </strong> : <%= user.source %>
		</p>
	</div>

        <h1>VK info </h1>
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-vk"></span> Vk</h3>

                    <p>
                        <strong>id</strong>: <%= user.vk.id %><br>
                        <strong>token</strong>: <%= user.vk.token %><br>
                        <strong>email</strong>: <%= user.vk.email %><br>
                        <strong>name</strong>: <%= user.vk.name %>
                    </p>

            </div>
        </div>
	<h1> FB info</h1>
	 <div class="col-sm-6">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

                    <p>
                        <strong>id</strong>: <%= user.facebook.id %><br>
                        <strong>token</strong>: <%= user.facebook.token %><br>
                        <strong>email</strong>: <%= user.facebook.email %><br>
                        <strong>name</strong>: <%= user.facebook.name %>
                    </p>

            </div>
        </div>
    </div>

</div>
</body>
</html>
